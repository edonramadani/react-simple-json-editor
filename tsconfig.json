{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "\u0000",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "sourceMap": true,

    "jsx": "preserve",
    "outDir": "dist/",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "paths": {
      "react": [ "node_modules/@types/react" ]
    }
  },
  "include": [
    "src",
  ],
}
